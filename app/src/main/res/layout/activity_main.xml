<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="20dip" >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/goldweight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Weight of gold (g)"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline" >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/goldvalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current gold value per gram"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/goldtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="Type of gold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dip"
            android:dropDownWidth="match_parent"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/totalgold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:text="Total Gold Value: RM "
            android:textColor="#454545"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/zakatpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:text="Zakat Payable: RM "
            android:textColor="#454545"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/totalzakat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:text="Total Zakat: RM "
            android:textColor="#454545"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btncal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:text="Calculate"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/btnreset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="Reset"
            android:textStyle="normal|bold" />

    </LinearLayout>
</RelativeLayout>